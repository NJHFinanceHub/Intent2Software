# Database Configuration
POSTGRES_USER=platform_user
POSTGRES_PASSWORD=platform_password
DATABASE_URL=postgresql://platform_user:platform_password@localhost:5432/intent_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password

# Server Configuration
PORT=3000
NODE_ENV=development
# Required: Generate with: openssl rand -hex 32
SESSION_SECRET=your-secret-key-change-in-production

# Required: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# AI Provider Configuration
# Users can configure this via the UI, but can also set defaults here
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Sandbox Configuration
SANDBOX_TIMEOUT=300000
MAX_PROJECT_SIZE=100M

# Storage Configuration
PROJECT_STORAGE=/app/storage

# Logging
LOG_LEVEL=info
